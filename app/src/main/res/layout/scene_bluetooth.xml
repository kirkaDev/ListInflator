<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="24dp"
    android:layout_marginVertical="96dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/topBluetoothScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:background="@drawable/shape_bluetooth_top"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bluetooth_24"
            android:padding="4dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal">
        </androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bluetoothLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:text="@string/bluetooth_label"
            style="@style/White.12.Bold">
        </androidx.appcompat.widget.AppCompatTextView>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/settingsList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/topBluetoothScreen"
        app:layout_constraintStart_toStartOf="@+id/topBluetoothScreen"
        app:layout_constraintEnd_toEndOf="@+id/topBluetoothScreen"
        app:layout_constraintBottom_toTopOf="@+id/bluetoothSettingsLabel"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_bluetooth_device"
        android:background="@color/black_alpha"
        tools:itemCount="2"
        tools:orientation="vertical">
    </androidx.recyclerview.widget.RecyclerView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bluetoothSettingsLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/settingsList"
        app:layout_constraintStart_toStartOf="@+id/topBluetoothScreen"
        app:layout_constraintEnd_toEndOf="@+id/topBluetoothScreen"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/bluetooth_settings_label"
        android:padding="12dp"
        style="@style/White.12"
        android:textAlignment="center"
        android:background="@drawable/shape_bluetooth_bottom">
    </androidx.appcompat.widget.AppCompatTextView>

</androidx.constraintlayout.widget.ConstraintLayout>